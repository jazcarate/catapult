<div class="overlay">
  <p>
     Crear un <strong>Evento</strong></strong>
  </p>
  Destino <br />
  <input type="text" placeholder="Destino" id="busqueda-destinos"><br />
  <form action="/nuevoEvento" method="POST" onSubmit="javascript: return actualizarDestino(this);">
    Nombre <br />
    <input type="text" placeholder="Nombre del evento" name="nombre" required> <br />
    Día del evento <br />
    <input type="datetime-local" name="dia" required><br />
    Descripción <em>(opcional)</em> <br />
    <textarea name="descripcion"></textarea><br />
  <button type="submit">Crear!</button>
</form>
</div>

<div id="mappy" class="mapa"></div>

<script type="text/javascript">
  var mapa;
  function initMapa(){
    mapa = new Mapa("mappy");
    mapa.autocompleteMarcas("busqueda-destinos");
  }
  
  function actualizarDestino(e){
    if( mapa.marca === undefined ){
      alert("Indroduzca destino");
      return false;
    }
    
    var input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'destino';
    input.value = mapa.marca;
    e.appendChild(input);
    return true;
  }
</script>